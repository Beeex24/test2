        grid-template-columns: 1fr 320px;
        gap: 30px;
        padding: 0 30px 30px;
      }

      .article-area {
        background: white;
      }

      .sidebar {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        height: fit-content;
        position: sticky;
        top: 20px;
      }

      /* „Éí„Éº„É≠„Éº„Çª„ÇØ„Ç∑„Éß„É≥ */
