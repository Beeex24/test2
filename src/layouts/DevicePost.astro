const siteName = "ANYGAMESÊîæÈÄÅÂ±Ä";
---

<html lang="ja">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <BaseHead   title={title} description={description} image={heroImage} ogType="article" siteName="ANYGAMESÊîæÈÄÅÂ±Ä" pubDate={pubDate} updatedDate={updatedDate} section="„Éá„Éê„Ç§„Çπ„É¨„Éì„É•„Éº" tags={["„Éá„Éê„Ç§„Çπ"]} />

