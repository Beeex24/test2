      }

      /* „É¨„Çπ„Éù„É≥„Ç∑„ÉñÂØæÂøú */
      @media (max-width: 768px) {
        .post-grid {
          grid-template-columns: 1fr;
          gap: 1rem;
        }

        .recommended-posts {
          padding: 1.5rem;
          margin: 2rem 0;
        }

        .recommended-posts h3 {
          font-size: 1.5rem;
          margin-bottom: 1.5rem;
        }

        .post-image {
